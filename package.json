{
  "name": "dr-x-monorepo",
  "private": true,
  "version": "1.0.0.0.1",
  "description": "DR.X - Ecossistema JurÃ­dico Comercial",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=api --filter=web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:studio": "turbo run db:studio",
    "db:push": "turbo run db:push",
    "db:backup:local": "docker exec drx_db_local pg_dump -U drx_dev drx_local > backups/backup.sql",
    "db:restore:local": "docker exec -i drx_db_local psql -U drx_dev drx_local < backups/backup.sql",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^2.8.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "axios": "^1.13.5",
    "form-data": "^4.0.5"
  }
}